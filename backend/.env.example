# Backend environment variables
PORT=3000
# CORS origin to allow requests from frontend (set to frontend origin in production)
CORS_ORIGIN=http://localhost:5173

# Database configuration (MySQL via XAMPP)
DB_CLIENT=mysql
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=sherwoodcare

# Or use DATABASE_URL format:
# DATABASE_URL=mysql://root:@127.0.0.1:3306/sherwoodcare

API_KEY=replace_with_real_api_key
NODE_ENV=development

# OpenAI (ChatGPT)
# IMPORTANT: Keep secrets out of git. Put real values in backend/.env
OPENAI_API_KEY=
# Optional override (default: gpt-4o-mini)
OPENAI_MODEL=
