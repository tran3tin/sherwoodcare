# Backend environment variables
PORT=3000
# CORS origin to allow requests from frontend (set to frontend origin in production)
CORS_ORIGIN=http://localhost:5173

# Database configuration (PostgreSQL)
DB_CLIENT=pg
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=postgres
PGPASSWORD=
PGDATABASE=sherwoodcare

# Or use DATABASE_URL format:
# DATABASE_URL=postgres://postgres:@127.0.0.1:5432/sherwoodcare

API_KEY=replace_with_real_api_key
NODE_ENV=development

# OpenAI (ChatGPT)
# IMPORTANT: Keep secrets out of git. Put real values in backend/.env
OPENAI_API_KEY=
# Optional override (default: gpt-4o-mini)
OPENAI_MODEL=
